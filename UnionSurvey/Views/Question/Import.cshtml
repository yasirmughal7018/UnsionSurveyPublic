@model UnionSurvey.Model.SurveyImportModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Import Question";
}

@section Styles {
}

<div class="row gx-3">
    <div class="card mb-3">
        <div class="bg-holder d-none d-lg-block bg-card" style="background-image:url(/img/icons/spot-illustrations/corner-4.png);">
        </div>
        <!--/.bg-holder-->

        <div class="card-body position-relative">
            <div class="row gx-2">
                <form class="row g-3 needs-validation" novalidate id="frmImport" method="post" asp-action="Import" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="SurveyId" class="mb-1 form-label"></label>
                            <select required asp-for="SurveyId" class="form-control" asp-items="@(new SelectList(Model.Surveys, "Id", "Name"))">
                                <option value="" selected>Select a survey</option>
                            </select>
                        </div>
                        <div class="mb-1">
                            <label asp-for="QuestionFile" class="mb-1 form-label"></label>
                            <input asp-for="QuestionFile" class="form-control" required />
                        </div>
                    </div>
                    <div class="card-footer border-top border-200 py-x1">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-md">
                                <a class="btn btn-outline-info me-1 mb-1" href="/template/questionimporttemplate.txt" download="QuestionImportTemplate.txt">
                                    Download Template
                                </a>
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary w-100  me-1 mb-1">Save</button>
                            </div>
                            <div>
                                <span class="badge d-block p-2 badge-subtle-secondary col-md-12">
                                    This is a text file with the extension
                                    <span class="badge rounded-pill badge-subtle-success">.txt</span>,
                                    containing questions and options. Each question and its options are separated by a 
                                    <span class="badge rounded-pill badge-subtle-warning">
                                        pipe sign "|"
                                    </span>.<br/>
                                    Please ensure that there are no pipe signs present within the questions or options themselves.
                                </span>
                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </div>
    </div>
</div>