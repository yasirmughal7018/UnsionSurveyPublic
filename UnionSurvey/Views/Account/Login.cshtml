    <div class="position-relative p-4 pt-md-5 pb-md-7" data-bs-theme="light">
        <div class="bg-holder bg-auth-card-shape" style="background-image:url(/img/suts/Suts-logo.svg);background-color: #fff;background-size: contain;">
        </div>
        <!--/.bg-holder-->

        @* <img b-0s5xclipeb="" class="bg-auth-circle-shape" src="/img/suts/sutslogo.png" alt="" width="250"> *@
