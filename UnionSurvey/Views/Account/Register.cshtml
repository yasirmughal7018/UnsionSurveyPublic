@{
    Layout = "_LayoutAccount";
    ViewData["Title"] = "Create New Account";
}


<div class="col-md-5 text-center bg-card-gradient">
    <div class="position-relative p-4 pt-md-5 pb-md-7" data-bs-theme="light">
        <div class="bg-holder bg-auth-card-shape" style="background-image:url(/img/suts/background.png);">
        </div>
        <!--/.bg-holder-->

@*         <div class="z-1 position-relative">
            <a class="link-light mb-4 font-sans-serif fs-5 d-inline-block fw-bolder" href="../../../index.html">falcon</a>
            <p class="opacity-75 text-white">With the power of Falcon, you can now focus only on functionaries for your digital products, while leaving the UI design on us!</p>
        </div> *@
    </div>
    <div class="mt-3 mb-4 mt-md-4 mb-md-5" data-bs-theme="light">
        <p class="pt-3 text-white">
            Have an account?<br>
            <a class="btn btn-outline-light mt-2 px-4" asp-controller="Account" asp-action="Login">Log In</a>
        </p>
    </div>
</div>
<div class="col-md-7 d-flex flex-center">
    <div class="p-4 p-md-5 flex-grow-1">
        <h3>Register</h3>
        <form class="needs-validation" novalidate method="post" asp-action="Register">
            @* @Html.AntiForgeryToken() *@

            <div class="row gx-2">
                <div class="mb-3 col-sm-6">
                    <label class="form-label" asp-for="FirstName"></label>
                    <input class="form-control" required autocomplete="on" asp-for="FirstName"/>
                </div>
                <div class="mb-3 col-sm-6">
                    <label class="form-label" asp-for="LastName"></label>
                    <input class="form-control" autocomplete="on" asp-for="LastName"/>
                </div>
            </div>
            <div class="row gx-2">
                <div class="mb-3 col-sm-6">
                    <label class="form-label" asp-for="UserName"></label>
                    <input class="form-control" required autocomplete="on" asp-for="UserName"/>
                </div>
                <div class="mb-3 col-sm-6">
                    <label class="form-label" asp-for="ReferalCode"></label>
                    <input type="hidden" required asp-for="ReferalCode" />
                    <div class="px-2 py-1 fw-semibold text-success-emphasis bg-success-subtle border border-success-subtle rounded-2">@Model.ReferalCode</div>
                </div>
            </div>
            <div class="row gx-2">
                <div class="mb-3 col-sm-6">
                    <label class="form-label" asp-for="Password"></label>
                    <input class="form-control" required autocomplete="on" asp-for="Password" />
                </div>
                <div class="mb-3 col-sm-6">
                    <label class="form-label" asp-for="ConfirmPassword"></label>
                    <input class="form-control" required autocomplete="on" asp-for="ConfirmPassword" />
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="card-register-checkbox" required />
                <label class="form-label" for="card-register-checkbox">I accept the 
                    <a href="#!" data-bs-toggle="modal" data-bs-target="#termsandcondition">terms </a>and 
                    <a class="white-space-nowrap" href="#!" data-bs-toggle="modal" data-bs-target="#termsandcondition">privacy policy</a>
                </label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary d-block w-100 mt-3" type="submit" name="submit">Register</button>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-no-bg alert-danger" role="alert">
                    @foreach (var state in ViewData.ModelState.Values)
                    {
                        foreach (var error in state.Errors)
                        {
                            <span class="d-block">@error.ErrorMessage</span>
                        }
                    }
                </div>
            }
        </form>
        @*         <div class="position-relative mt-4">
        <hr />
        <div class="divider-content-center">or register with</div>
        </div>
        <div class="row g-2 mt-2">
        <div class="col-sm-6"><a class="btn btn-outline-google-plus btn-sm d-block w-100" href="#"><span class="fab fa-google-plus-g me-2" data-fa-transform="grow-8"></span> google</a></div>
        <div class="col-sm-6"><a class="btn btn-outline-facebook btn-sm d-block w-100" href="#"><span class="fab fa-facebook-square me-2" data-fa-transform="grow-8"></span> facebook</a></div>
        </div> *@
    </div>
</div>